<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingHorizontal="@dimen/_10sdp"
    android:paddingVertical="@dimen/_15sdp">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textHeaderTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/live_schemes"
        android:textColor="@color/black"
        android:textSize="@dimen/_14ssp"
        app:fontFamily="@font/roboto_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textHeaderCountTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:gravity="center"
        android:text="@string/live_schemes"
        android:textColor="@color/_79747E"
        android:textSize="@dimen/_11ssp"
        app:fontFamily="@font/roboto_regular"
        app:layout_constraintStart_toEndOf="@+id/textHeaderTxt"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_2sdp"
        tools:ignore="HardcodedText"
        android:visibility="gone"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editTextSearch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        style="@style/PrimaryEditText"
        android:hint="@string/search"
        android:text=""
        android:drawableEnd="@drawable/ic_search"
        app:layout_constraintTop_toBottomOf="@+id/textHeaderTxt"
        android:layout_marginHorizontal="0dp"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:maxLines="1"
        android:lines="1"
        android:singleLine="true"
        />

</androidx.constraintlayout.widget.ConstraintLayout>