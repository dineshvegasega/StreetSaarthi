<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Test1" parent="Theme.MaterialComponents.DayNight.NoActionBar" >
        <item name="colorPrimary">@color/app_color</item>
        <item name="colorPrimaryVariant">@color/app_color</item>
        <item name="colorOnPrimary">@color/_ffffff</item>
        <item name="colorSecondary">@color/app_color</item>
        <item name="colorSecondaryVariant">@color/app_color</item>
        <item name="colorOnSecondary">@color/_000000</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>


    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>

    <!--Primary Button in Whole App-->
    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/_8sdp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:colorPrimary">@color/_999999</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
    </style>

    <!--Primary Button in Whole App-->
    <style name="PrimaryButtonYellow" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/_20sdp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:colorPrimary">@color/_E79D46</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>


    <!--Primary Button in Whole App-->
    <style name="PrimaryButtonGray" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/_20sdp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:colorPrimary">@color/_999999</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>


    <!--Primary Button in Whole App-->
    <style name="PrimaryButtonYellowSmall" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/_20sdp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:colorPrimary">@color/_E79D46</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>


    <!--Primary Button in Whole App-->
    <style name="PrimaryButtonWhite" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/_5sdp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:colorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="PrimaryEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/white_round_corner</item>
        <item name="cornerRadius">@dimen/_5sdp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/_999999</item>
        <item name="textAllCaps">false</item>
        <item name="android:drawablePadding">@dimen/_8sdp</item>
        <item name="android:layout_marginHorizontal">@dimen/_10sdp</item>
        <item name="android:paddingHorizontal">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
    </style>


    <style name="TransparentDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:state_expanded">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>


    <style name="CalendarDatePickerDialog"  parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/_E79D46</item>
        <item name="android:textColorPrimary">@color/_E79D46</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerTheme.ButtonBarNegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerTheme.ButtonBarNegativeButtonStyle</item>
    </style>


    <style name="DatePickerTheme.ButtonBarNegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/_E79D46</item>
    </style>



    <style name="DialogTheme"  parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/_E79D46</item>
        <item name="android:textColorPrimary">@color/_E79D46</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerTheme.ButtonBarNegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerTheme.ButtonBarNegativeButtonStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyMaterialAlertDialog.MaterialComponents.Body.Text</item>
        <item name="android:background">@color/white</item>
    </style>




    <style name="TimeDialogTheme"  parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/_E79D46</item>
        <item name="android:textColorPrimary">@color/_E79D46</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerTheme.ButtonBarNegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerTheme.ButtonBarNegativeButtonStyle</item>
    </style>



    <style name="BodyMaterialAlertDialog.MaterialComponents.Body.Text" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/_E79D46</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/white</item>
    </style>


    <style name="LogoutDialogTheme"  parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/_E79D46</item>
        <item name="android:textColorPrimary">@color/_E79D46</item>
        <item name="materialAlertDialogBodyTextStyle">@style/ButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/ButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/ButtonStyle</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="RoundCorner50">
        <item name="cornerSize">50%</item>
    </style>
</resources>